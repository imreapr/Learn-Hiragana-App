<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pick_character_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tyler.learnhiragana.PickCharacterSet"
    android:background="@drawable/bckrnd">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:text="a-o"
            android:id="@+id/ao"
            android:onClick="ao"
            android:textSize="20dp"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            ></Button>

        <Button
            android:textSize="20dp"
            android:id="@+id/saso"
            android:text="sa-so"
            android:onClick="saso"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/kako"
            android:layout_row="1"
            android:layout_column="0"
            />
        <Button
            android:textSize="20dp"
            android:id="@+id/tato"
            android:text="ta-to"
            android:onClick="tato"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/saso"
            android:layout_row="1"
            android:layout_column="1"/>
        <Button
            android:textSize="20dp"
            android:id="@+id/nano"
            android:text="na-no"
            android:onClick="nano"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/tato"
            android:layout_row="2"
            android:layout_column="0"/>
        <Button
            android:textSize="20dp"
            android:id="@+id/haho"
            android:text="ha-ho"
            android:onClick="haho"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/nano"
            android:layout_row="2"
            android:layout_column="1"
            />
        <Button
            android:textSize="20sp"

            android:id="@+id/mamo"
            android:text="ma-mo"
            android:onClick="mamo"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/haho"
            android:layout_row="3"
            android:layout_column="0"/>
        <Button
            android:textSize="20dp"

            android:id="@+id/yayo"
            android:text="ya-yo"
            android:onClick="yayo"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/mamo"
            android:layout_row="3"
            android:layout_column="1"/>
        <Button
            android:textSize="20dp"
            android:id="@+id/raro"
            android:text="ra-ro"
            android:onClick="raro"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/yayo"
            android:layout_row="4"
            android:layout_column="0"/>



        <Button
            android:textSize="20dp"
            android:id="@+id/kako"
            android:text="ka-ko"
            android:onClick="kako"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            ></Button>

        <Button
            android:textSize="20dp"
            android:id="@+id/wawon"
            android:text="wa-wo-n"
            android:onClick="wawon"
            android:clickable="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="4"
            android:layout_column="1"/>
        <TextView

            android:id="@+id/spacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/wawon"
            android:layout_marginTop="16dp"
            android:layout_row="5"
            android:layout_columnSpan="2"
            android:layout_column="0"/>


    </GridLayout>
</ScrollView>
